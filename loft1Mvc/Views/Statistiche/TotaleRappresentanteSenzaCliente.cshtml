@model IEnumerable<StockManagement.Statistiche.RappresentanteTotaleEuro>

@{
    ViewData["Title"] = "Totale Per Rappresentante";
}

<h1>
    Statistiche per rappresentante <span class="text-danger">@ViewData["Collezione"]</span>
    <br /> Incasso venduto: <strong>@ViewData["IncassoTotale"]</strong>
    <br /> Incasso comprato: <strong>@ViewData["IncassoTotaleComprato"]</strong>
</h1>
<div class="row ml-2 mb-4">
    <a asp-action="Index" class="btn btn-primary float-left mr-2">Totale</a>
    <a asp-action="TotaleRappresentantiLoft" class="btn btn-primary float-left mr-2">Tot. rapp Loft</a>
    <a asp-action="TotaleRappresentantiZeroMeno" class="btn btn-primary float-left mr-2">Tot. rapp ZeroMeno</a>
</div>
<div class="row ml-2 mb-4">
    <a asp-action="TotaleRappresentanteSenzaCliente" class="btn btn-primary float-left mr-2">Totale senza cliente</a>
    <a asp-action="TotaleRappresentanteSenzaClienteLoft" class="btn btn-primary float-left mr-2">Tot. rapp Loft senza cliente</a>
    <a asp-action="TotaleRappresentanteSenzaClienteZeroMeno" class="btn btn-primary float-left mr-2">Tot. rapp ZeroMeno senza cliente</a>
</div>
<div class="row ml-2 mb-4">
    <a asp-action="TotaleFornitore" class="btn btn-primary float-left mr-2">Totale per fornitore</a>
    <a asp-action="TotaleFornitoreLoft" class="btn btn-primary float-left mr-2">Totale per fornitore Loft</a>
    <a asp-action="TotaleFornitoreZeroMeno" class="btn btn-primary float-left mr-2">Totale per fornitore Zero Meno</a>
</div>
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-dark small">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nomeAgenzia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.totaleVenduto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.totaleComprato)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nomeAgenzia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.totaleVenduto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.totaleComprato)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
