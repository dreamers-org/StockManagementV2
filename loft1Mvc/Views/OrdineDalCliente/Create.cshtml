@model loft1Mvc.Models.OrdineDalCliente
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
	ViewData["Title"] = "Inserisci ordine";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<h1>Inserisci ordine</h1>
<hr />
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
	<div class="form-row">
		<div class="col-md-8 offset-2 mb-3 alert alert-danger" role="alert">
			<label asp-for="Cliente" class="control-label"><strong>@ViewBag.Error</strong></label><br />
		</div>
	</div>
}

@if (!string.IsNullOrEmpty(Context.Session.GetString("OrdineInCorso")))
{
	if (bool.Parse(Context.Session.GetString("OrdineInCorso")) == true)
	{
	<div class="form-row">
		<div class="col-md-8 offset-2 mb-3 alert alert-success" role="alert">
			<label asp-for="Cliente" class="control-label">Cliente: <strong>@Context.Session.GetString("Cliente")</strong></label><br />
			<label asp-for="Indirizzo" class="control-label">Indirizzo: <strong>@Context.Session.GetString("Indirizzo")</strong></label><br />
			<label asp-for="DataConsegna" class="control-label">Data consegna: <strong>@Context.Session.GetString("DataConsegna")</strong></label>
		</div>
	</div>
	}
}
<div class="row  text-center">
	<div class="col-md-8 offset-2 text-center mx-auto">
		<form class="needs-validation" asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-row">
				<div class="col-md-6 mb-3">
					<label asp-for="Codice" class="control-label"></label>
					<input asp-for="Codice" class="form-control" id="txtCodice" onblur="return getColorePerArticolo();" />
					<span asp-validation-for="Codice" class="text-danger"></span>
				</div>
				<div class="col-md-6 mb-3">
					<label asp-for="Colore" class="control-label text-center"></label>
					@Html.DropDownListFor(p => p.Colore, new SelectList(""), new { @class = "form-control  text-center", @disabled = "disabled", @id = "dropdownColore" })
					<span asp-validation-for="Colore" class="text-danger"></span>
				</div>
			</div>
			<div class="form-row">
				<div class="col-md-1 mb-3">
					<label asp-for="Xxxs" class="control-label"></label>
					<input asp-for="Xxxs" class="form-control" autocomplete="off" />
					<span asp-validation-for="Xxxs" class="text-danger"></span>
				</div>
				<div class="col-md-1 mb-3">
					<label asp-for="Xxs" class="control-label"></label>
					<input asp-for="Xxs" class="form-control" autocomplete="off" />
					<span asp-validation-for="Xxs" class="text-danger"></span>
				</div>
				<div class="col-md-1 mb-3">
					<label asp-for="Xs" class="control-label"></label>
					<input asp-for="Xs" class="form-control" autocomplete="off" />
					<span asp-validation-for="Xs" class="text-danger"></span>
				</div>
				<div class="col-md-1 mb-3">
					<label asp-for="S" class="control-label"></label>
					<input asp-for="S" class="form-control" autocomplete="off" />
					<span asp-validation-for="S" class="text-danger"></span>
				</div>
				<div class="col-md-2 mb-3">
					<label asp-for="M" class="control-label"></label>
					<input asp-for="M" class="form-control" autocomplete="off" />
					<span asp-validation-for="M" class="text-danger"></span>
				</div>
				<div class="col-md-2 mb-3">
					<label asp-for="L" class="control-label"></label>
					<input asp-for="L" class="form-control" autocomplete="off" />
					<span asp-validation-for="L" class="text-danger"></span>
				</div>
				<div class="col-md-1 mb-3">
					<label asp-for="Xl" class="control-label"></label>
					<input asp-for="Xl" class="form-control" autocomplete="off" />
					<span asp-validation-for="Xl" class="text-danger"></span>
				</div>
				<div class="col-md-1 mb-3">
					<label asp-for="Xxl" class="control-label"></label>
					<input asp-for="Xxl" class="form-control" autocomplete="off" />
					<span asp-validation-for="Xxl" class="text-danger"></span>
				</div>
				<div class="col-md-1 mb-3">
					<label asp-for="Xxxl" class="control-label"></label>
					<input asp-for="Xxxl" class="form-control" autocomplete="off" />
					<span asp-validation-for="Xxxl" class="text-danger"></span>
				</div>
				<div class="col-md-1 mb-3">
					<label asp-for="Xxxxl" class="control-label"></label>
					<input asp-for="Xxxxl" class="form-control" autocomplete="off" />
					<span asp-validation-for="Xxxxl" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary" value="Inserisci riga ordine" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Torna alla lista</a>
</div>



@section Scripts {

	<script type="text/javascript">
		function cancelFields() {
			var i = confirm('Sei sicuro?');
			if (i) {
				location.reload();
			}
			else {
				return false;
			}
		}
		function getColorePerArticolo() {
			let id = $('#txtCodice').val();
			console.log(id);
			$.ajax({
				type: "POST",
				url: "/ArticoloAnnullato/SelectColoriFromId",
				data: { id: id },
				success: function (data) {
					console.log(data.length);
					$('#dropdownColore').removeAttr("disabled");
					if (data.length == 0) {
						var s = '<option value="-1">Seleziona un colore</option>';
						$("#dropdownColore").html(s);
					}
					else {
						for (var i = 0; i < data.length; i++) {
							var s = '<option value="-1">Seleziona un colore</option>';
							for (var i = 0; i < data.length; i++) {
								console.log(data[i]);
								s += '<option value="' + data[i].colore + '">' + data[i].colore + '</option>';
							}
							$("#dropdownColore").html(s);
						}
					}
				},
				error: function () {
					console.log("Errore");
				}
			});
		}
	</script>
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

