@model IEnumerable<StockManagement.Models.Tipo>

@{
    ViewData["Title"] = "Lista tipi articolo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Inserisci nuovo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            @if (User.IsInRole("SuperAdmin"))
            {
                <th></th>
            }
            </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            @if (User.IsInRole("SuperAdmin"))
            {
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modifica</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Dettagli</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Elimina</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
