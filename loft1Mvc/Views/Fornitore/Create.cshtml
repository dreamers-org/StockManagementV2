@model StockManagement.Models.Fornitore

@{
    ViewData["Title"] = "Inserimento nuovo fornitore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-4">
        <a asp-action="Index" class="btn rounded-pill btn-outline-secondary float-left mt-3"><i class="fas fa-arrow-left"></i>&nbsp;Torna alla lista</a>
    </div>
    <div class="col-sm-4 text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-sm-12">
        <hr />
    </div>
</div>

<div class=" col-sm-10 col-md-10 mx-auto mb-3">
    <div class="card border-left-primary shadow h-100">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row justify-content-center">
                    <div class="col-md-2 mb-4">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row justify-content-center">
                    <div class="col-md-2 mb-4">
                        <input type="submit" value="Inserisci" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

