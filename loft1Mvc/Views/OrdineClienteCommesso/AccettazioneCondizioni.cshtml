@model byte[]

@{
    ViewData["Title"] = "Visione accettazione condizioni";
}

<!-- Title -->
<div class="row">
    <div class="col-sm-4">
        <a asp-action="Index" class="btn rounded-pill btn-outline-secondary float-left mt-3"><i class="fas fa-arrow-left"></i>&nbsp;Torna alla lista</a>
    </div>
    <div class="col-sm-8">
        <h1 class="float-left">@ViewData["Title"]</h1>
    </div>
    <div class="col-sm-12">
        <hr />
    </div>
</div>


<div class="row">
    <div class="col-sm-6 offset-3">
        @if (Model.Length > 0)
        {
            var base64 = Convert.ToBase64String(Model);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <img width="600" height="600" src="@imgSrc" class="img-fluid" />
        }
    </div>
</div>
