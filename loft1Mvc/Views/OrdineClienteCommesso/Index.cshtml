@model IEnumerable<StockManagement.Models.ViewModels.ViewOrdineClienteCommessoViewModel>

@{
    ViewData["Title"] = "Lista ordini cliente";
}

<!-- Title -->
<div class="row">
    <div class="col-6 offset-3">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<p>
    <a asp-controller="OrdineCliente" asp-action="Create">Inserisci un nuovo ordine</a>
</p>
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-dark small">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Cliente)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.DataConsegna)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.TipoPagamento)
                        </th>
                        <th scope="col" class="w-50">
                            @Html.DisplayNameFor(model => model.Note)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Pagato)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Spedito)
                        </th>
                        <th scope="col" class="w-25">
                            @Html.DisplayNameFor(model => model.SpeditoInParte)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Letto)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Stampato)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Visualizza dettaglio"><i class="fas fa-list-alt"></i></a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Modifica"><i class="fas fa-edit"></i></a>
                        </td>
                        <td width="10%">
                            @Html.DisplayFor(modelItem => item.Cliente)
                        </td>
                        <td width="10%">
                            @Html.DisplayFor(modelItem => item.DataConsegna)
                        </td>
                        <td width="10%">
                            @Html.DisplayFor(modelItem => item.TipoPagamento)
                        </td>
                        <td width="30%">
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td width="4%">
                            @Html.DisplayFor(modelItem => item.Pagato)
                        </td>
                        <td width="4%">
                            @Html.DisplayFor(modelItem => item.Spedito)
                        </td>
                        <td width="4%">
                            @Html.DisplayFor(modelItem => item.SpeditoInParte)
                        </td>
                        <td width="4%">
                            @Html.DisplayFor(modelItem => item.Letto)
                        </td>
                        <td width="4%">
                            @Html.DisplayFor(modelItem => item.Stampato)
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
