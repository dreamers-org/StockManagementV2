                <label asp-for="TagliaUnica" class="control-label"></label>
                <input asp-for="TagliaUnica" class="form-control" />
                <span asp-validation-for="TagliaUnica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Conferma" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
