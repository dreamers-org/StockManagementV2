@model StockManagement.Models.ViewModels.EditRigaOrdineClienteViewModel

@{
    ViewData["Title"] = "Cancella riga";
}

<!-- Title -->
<div class="row">
    <div class="col-sm-4">
        <a asp-action="Create" class="btn rounded-pill btn-outline-secondary float-left mt-3"><i class="fas fa-arrow-left"></i>&nbsp;Indietro</a>
    </div>
    <div class="col-sm-4">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-sm-12">
        <hr />
    </div>
</div>
<div>
    <div class="row">
        <div class=" col-sm-12 col-md-12 mx-auto mb-3">
            <div class="card border-left-primary shadow h-100">
                <div class="card-body">
                    <div class="form-row justify-content-center">
                        <div class="form-row justify-content-center">
                            <div class="col-md-4 mb-3">
                                <label asp-for="CodiceArticolo" class="control-label"></label>
                                <input asp-for="CodiceArticolo" id="txtCodiceArticolo" class="form-control" disabled />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Colore" class="control-label"></label>
                                <input asp-for="Colore" id="txtColore" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col-md-1 mb-3">
                                <label asp-for="Xxs" class="control-label"></label>
                                <input asp-for="Xxs" id="txtXxs" class="form-control" disabled />
                                <span asp-validation-for="Xxs" class="text-danger"></span>
                            </div>
                            <div class="col-md-1 mb-3">
                                <label asp-for="Xs" class="control-label"></label>
                                <input asp-for="Xs" id="txtXs" class="form-control" disabled />
                            </div>
                            <div class="col-md-1 mb-3">
                                <label asp-for="S" class="control-label"></label>
                                <input asp-for="S" id="txtS" class="form-control" disabled />
                            </div>
                            <div class="col-md-1 mb-3">
                                <label asp-for="M" class="control-label"></label>
                                <input asp-for="M" id="txtM" class="form-control" disabled />
                            </div>
                            <div class="col-md-1 mb-3">
                                <label asp-for="L" class="control-label"></label>
                                <input asp-for="L" id="txtL" class="form-control" disabled />
                                <span asp-validation-for="L" class="text-danger"></span>
                            </div>
                            <div class="col-md-1 mb-3">
                                <label asp-for="Xl" class="control-label"></label>
                                <input asp-for="Xl" id="txtXl" class="form-control" disabled />
                            </div>
                            <div class="col-md-1 mb-3">
                                <label asp-for="Xxl" class="control-label"></label>
                                <input asp-for="Xxl" id="txtXxl" class="form-control" disabled />
                            </div>
                            <div class="col-md-1 mb-3">
                                <label asp-for="Xxxl" class="control-label"></label>
                                <input asp-for="Xxxl" id="txtXxxl" class="form-control" disabled />
                            </div>
                            <div class="col-md-2 mb-3">
                                <label asp-for="TagliaUnica" class="control-label"></label>
                                <input asp-for="TagliaUnica" id="txtTagliaUnica" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="DeleteRow">
        <input type="hidden" asp-for="IdRiga" />
        <input type="submit" value="Cancella riga" class="btn btn-primary" />
    </form>
</div>
