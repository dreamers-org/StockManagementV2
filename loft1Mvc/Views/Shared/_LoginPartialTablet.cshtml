@using Microsoft.AspNetCore.Identity
@using loft1Mvc.Areas.Identity.Data
@inject SignInManager<GenericUser> SignInManager
@inject UserManager<GenericUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="container mb-5">
        <div class="row">
            <div class="col-sm-6">
                <a asp-controller="Home" asp-action="Index" title="clicca per tornare alla home..">
                    <img class="img-fluid d-block mx-auto float-left mt-3 ml-5" width="40" height="40" src="https://scontent-mxp1-1.xx.fbcdn.net/v/t1.0-9/39887026_1763214110443557_4399191407651192832_n.jpg?_nc_cat=100&amp;_nc_ht=scontent-mxp1-1.xx&amp;oh=aea56c7451368d06688d4390d31ee6eb&amp;oe=5CE4D5FA" alt="logoLoft1">
                </a>
            </div>
            <div class="col-sm-6">
                <form id="logoutForm" class="form-inline float-right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <a id="manage" class="nav-link text-dark mt-3" href="#" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                    <button id="logout" type="submit" class="btn btn-primary float-right rounded-pill mt-3 mr-2">Logout</button>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <a class="btn btn-secondary float-right rounded-pill mt-3" id="register" asp-area="Identity" asp-page="/Account/Register">Registra utente</a>
    <a class="btn btn-primary float-right rounded-pill mt-3 mr-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
