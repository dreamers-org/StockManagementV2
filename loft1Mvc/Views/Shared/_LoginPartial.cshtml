@using Microsoft.AspNetCore.Identity
@using loft1Mvc.Areas.Identity.Data
@inject SignInManager<GenericUser> SignInManager
@inject UserManager<GenericUser> UserManager

    <ul class="navbar-nav">
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Manage">Ciao, @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="btn btn-sm btn-primary rounded-pill text-white mt-1 ">Logout</button>
                </form>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-secondary btn-sm rounded-pill ml-1  mt-1 " id="register" asp-area="Identity" asp-page="/Account/Register">Registra utente</a>
            </li>
        }
    </ul>
