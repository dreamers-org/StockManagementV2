@page
@model RegisterModel
@{
	ViewData["Title"] = "Registrazione nuovo utente.";
}

<h1>@ViewData["Title"]</h1>

<style>
	.card {
		border: none !important;
	}
</style>

<body>
	<div class="row">
		<div class="col-lg-6 offset-3">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="col col-md-4 offset-4">
						<div class="card">
							<img class="img-fluid mb-5 d-block mx-auto" src="https://scontent-mxp1-1.xx.fbcdn.net/v/t1.0-9/39887026_1763214110443557_4399191407651192832_n.jpg?_nc_cat=100&amp;_nc_ht=scontent-mxp1-1.xx&amp;oh=aea56c7451368d06688d4390d31ee6eb&amp;oe=5CE4D5FA" alt="logoLoft1">
						</div>
					</div>
					<form asp-route-returnurl="@Model.ReturnUrl" method="post">
						<h4>Crea un nuovo account.</h4>
						<hr>
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="Input.Email"></label>
							<input asp-for="Input.Email" class="form-control">
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.Password"></label>
							<input asp-for="Input.Password" class="form-control">
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.ConfirmPassword"></label>
							<input asp-for="Input.ConfirmPassword" class="form-control">
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
						</div>
						<button type="submit" class="btn btn-primary">Inserisci Utente</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>





