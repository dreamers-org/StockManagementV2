@page
@model LoginModel

@{
	ViewData["Title"] = "Accedi";
}

@*<h1>@ViewData["Title"]</h1>*@
<div class="row justify-content-center">
	<div class="col-md-4">
		<section>
			<form id="account" method="post">
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Input.Email" class="float-left"></label>
					<input asp-for="Input.Email" class="form-control form-control-sm" />
					<span asp-validation-for="Input.Email" class="text-danger float-left"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.Password" class="float-left"></label>
					<input asp-for="Input.Password" class="form-control form-control-sm" />
					<span asp-validation-for="Input.Password" class="text-danger float-left"></span>
				</div>
				<div class="form-group mt-4">
					<div class="checkbox">
						<label asp-for="Input.RememberMe">
							<input asp-for="Input.RememberMe" />
							@Html.DisplayNameFor(m => m.Input.RememberMe)
						</label>
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Log in</button>
				</div>
				<div class="form-group">
					<p>
						<a id="forgot-password" asp-page="./ForgotPassword">Hai dimenticato la password?</a>
					</p>
					@*<p>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registra un nuovo utente</a>
					</p>*@
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
